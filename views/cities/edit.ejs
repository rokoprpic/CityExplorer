<% layout("layouts/boilerplate") %>
    
<h1>Edit city</h1>
<form action="/cities/<%=city._id%>?_method=PUT" method="post" class="needs-validation" novalidate>
    <div class="mb-3 row">
        <label for="country" class="col-sm-2 col-form-label">Country name:</label>
        <div class="col-sm-4">
            <input type="text" id="country" name="city[country]" value="<%=city.country%>" class="form-control" required>
        </div>
    </div>
    <div class="mb-3 row">
        <label for="city" class="col-sm-2 col-form-label">City name:</label>
        <div class="col-sm-4">
            <input type="text" id="city" name="city[city]" value="<%=city.city%>" class="form-control" required>
        </div>
    </div>
    <div class="mb-3 row">
        <label for="latitude" class="col-sm-2 col-form-label">Latitude:</label>
        <div class="col-sm-4">
            <input type="text" id="latitude" name="city[latitude]" value="<%=city.latitude%>" class="form-control" required>
        </div>
    </div>
    <div class="mb-3 row">
        <label for="longitude" class="col-sm-2 col-form-label">Longitude:</label>
        <div class="col-sm-4">
            <input type="text" id="longitude" name="city[longitude]" value="<%=city.longitude%>" class="form-control" required>
        </div>
    </div>
    <div class="mb-3 row">
        <label for="description" class="col-sm-2 col-form-label">Description:</label>
        <div class="col-sm-4">
            <input type="text" id="description" name="city[description]" value="<%=city.description%>" class="form-control" required>
        </div>
    </div>
    <div class="mb-3 row">
        <label for="image" class="col-sm-2 col-form-label">Image:</label>
        <div class="col-sm-4">
            <input type="text" id="image" name="city[image]" value="<%=city.image%>" class="form-control">
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-sm-4">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
</form>


    <hr>
    <div class="mt-3">
        <a href="/cities/<%= city._id %>" class="btn btn-primary">Return to City details</a>
    </div>
